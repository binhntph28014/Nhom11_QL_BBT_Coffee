<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/item_backround">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMaNV"
                android:textSize="20dp"
                android:text="maNV"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/imgChart"
                android:src="@drawable/ic_chart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
<!--    <TextView-->
<!--        android:id="@+id/tvMaNV"-->
<!--        android:textSize="20dp"-->
<!--        android:text="maNV"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->
        <TextView
            android:id="@+id/tvSDT"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvHoTen"
                android:textSize="20dp"
                android:text="hoten"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTrangThai"
                android:textSize="20dp"
                android:text="TrangThai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNamSinh"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="NamSinh"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvGioiTinh"
                android:textSize="20dp"
                android:text="GioiTinh"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>